@model ClassLibrary1.Usuarios
@{
    ViewData["Title"] = "Inicio de sesion";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<div class="text-center bg-dark">
    <img src="./iniciar-sesion.png" class="mt-3"/>
    <h1 class="display-4 text-light h1">Inicio de sesion</h1>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <div class="divLog">
            <p class="text-light h3 plog">Nombre de usuario</p>
            <input class="form-control inpLog" placeholder="Usuario" id="NombreUsr" name="NombreUsr" />
        </div>
        <div class="divLog mt-3">
            <p class="text-light h3 plog2">Constraseña</p>
            <input class="form-control inpLog" placeholder="Contraseña" type="password" id="ContraseñaUsr" name="ContraseñaUsr" />
        </div>

        <div class="mt-5">
            <button type="submit" class="btn btn-light px-5"> Inicio de sesion </button>
        </div>
    }
</div>

