@model ClassLibrary1.Reportes

@{
    ViewData["Title"] = "DeleteReport";
}

<h1 class="text-light">Cerrar reporte</h1>


<h3 class="text-light">¿Esta seguro de querer cerrar el reporte?</h3>

<dl class="mt-3">
    <dd>
        <h2 class="text-light">
            ID
        </h2>

    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.IdReporte)
        </h5>

    </dd>
    <dd>
        <h2 class="text-light">
            Equipo
        </h2>

    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.Equipo)
        </h5>

    </dd>
    <dd>
        <h2 class="text-light">
            Accion a realizar
        </h2>

    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.AccionRealizar)
        </h5>

    </dd>
    <dd>
        <h2 class="text-light">
            Atencion
        </h2>

    </dd>
    <dd class="col-sm-10">
        <h5 class=" form-control">
            @Html.DisplayFor(model => model.Atencion)
        </h5>

    </dd>

</dl>

<form asp-action="DeleteReporte">
    <input type="hidden" asp-for="IdReporte" />
    <input type="submit" value="Cerrar Reporte" class="btn btn-danger" />
    <div>
        <a class="btn btn-light mt-3 text-dark" asp-action="Index">Regresar al listado</a>
    </div>
</form>

