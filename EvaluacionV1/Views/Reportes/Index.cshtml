@model List<ClassLibrary1.Reportes>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Index";
}

<div class="bg-dark text-light mt-4">
    <h2>Lista de Reportes</h2>

    <a class="btn btn-warning text-dark" asp-action="AddReport">Abrir un ticket</a>

    <hr />
    <table class="table text-light">
        <thead>
            <tr>
                <th>ID</th>
                <th>Equipo</th>
                <th>Accion a realizar</th>
                <th>Atencion</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.IdReporte
                </td>
                <td>
                    @item.Equipo
                </td>
                <td>
                    @item.AccionRealizar
                </td>
                <td>
                    @item.Atencion
                </td>
                <td>
                    <div class="btn btn-primary">
                        <a class="text-dark link1"> @Html.ActionLink("Detalles", "DetailsReport", new { IdReporte = item.IdReporte })</a>
                    </div>
                    <div class="btn btn-primary">
						<a>@Html.ActionLink("Editar", "EditReport", new { IdReporte = item.IdReporte })</a>
					</div>
                    <div class="btn btn-danger">
						<a>@Html.ActionLink("Eliminar", "DeleteReport", new { IdReporte = item.IdReporte })</a>
					</div>
                </td>

            </tr>
        }

    </table>
</div>